<form>
  <div class="control-group">
    <label>Calendar:</label>
    <div class="calendar-select">
      <select name="calendar">
        <option>none</option>
      <% collection.each(function(model){ %>
        <option value="<%= model.get('id') %>">
          <%= model.get('summary') %>
        </option>
      <% }); %>
      </select>
      <button class="topcoat-button--quiet" data-action="remove-calendar">x</button>
    </div>
  </div>

  <div class="control-group calendar-range">
    <a href="#" class="topcoat-button" data-week="current">This Week</a>
    <a href="#" class="topcoat-button topcoat-button--quiet" data-week="next">Next Week</a>

    <a href="#" class="topcoat-button topcoat-button--quiet" data-week="custom">Custom Range</a>
    <div class="custom-range">
      <input type=text name="timeMin" class="datepicker topcoat-text-input" placeholder="Start Date" value="10 March, 2013"/>
      <input type=text name="timeMax" class="datepicker topcoat-text-input" placeholder="End Date"/>
    </div>
  </div>

  <div class="control-group">
    <label>Timezone:</label>
    <select name="timezone">
    <% timezones(function(offset, name){ %>
      <option value="<%= offset %>">
        <%= name %>
      </option>
    <% }); %>
    </select>
  </div>

  <div class="control-group day-length">
    <div class="day-start">
      <label class="control-label" for="start">Day Start:</label>
      <select name="start" class="input-small">
        <option>7am</option>
        <option>8am</option>
        <option>9am</option>
        <option selected>10am</option>
        <option>11am</option>
        <option>12pm</option>
      </select>
    </div>
    <div class="day-end">
      <label class="control-label" for="end">Day End:</label>
      <select name="end" class="input-small">
        <option>1pm</option>
        <option>2pm</option>
        <option>3pm</option>
        <option>4pm</option>
        <option>5pm</option>
        <option selected>6pm</option>
        <option>7pm</option>
        <option>8pm</option>
      </select>
  </div>
  </div>

  <!-- <div class="control-group slider">
    <label>Min. Meeting Length:</label>
    <input type="text" class="topcoat-text-input" value="30" size=2 readonly data-ignore/>
    <input type="range" name="minDuration" class="topcoat-range" min=15 max=120 step=15 value="30"/>
  </div> --!>

  <div class="control-group toggles">
    <span>Hide Weekends:</span>
    <label class="topcoat-switch">
      <input type="checkbox" name="ignoreWeekend" checked="checked" class="topcoat-switch__input">
      <div class="topcoat-switch__toggle"></div>
    </label>
  </div>
</form>
